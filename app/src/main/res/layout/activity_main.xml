<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/black">

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dip"
        android:text="@string/txv_title_temp"
        android:textColor="@color/title_color"
        android:textSize="30sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/lightImage"
        android:layout_width="match_parent"
        android:layout_height="328dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/lightoffcompletely" />

    <Button
        android:id="@+id/voiceCommandButton"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:onClick="StartButton"
        android:backgroundTint="#050505"
        android:text="@string/voice_command" />

</LinearLayout>